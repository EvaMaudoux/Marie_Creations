{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <section class="reset-password">
        <h1>Réinitialisez votre mot de passe</h1>

        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <p> Entrez votre adresse mail et vous recevrez un lien pour réinitialiser votre mot de passe !</p>
        </div>
        <button class="submit btn btn-primary">Réinitialiser mon mot de passe</button>
        {{ form_end(requestForm) }}
    </section>
{% endblock %}
