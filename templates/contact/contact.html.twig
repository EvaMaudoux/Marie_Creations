{% extends 'base.html.twig' %}

{% block title %}{{parent() }} - contactez-moi {% endblock %}

{% block body %}
    <main class="contact">
        <div class="grid-container">
            <div class="bg-contact"></div>
            <div class="contact-container">
                <div class="form-contact">
                    <h1>Restons en contact</h1>
                    <p>N’hésitez pas à me contacter pour toute question, demande d'information ou inscription aux ateliers via le formulaire ci-dessous.</p>
                    <div class="form">
                        {{ form_start(contactForm) }}
                        {{ form_widget(contactForm) }}
                        <input class="submit" type="submit" value="envoyer">
                        <div class="infos">
                            <div class="phone">
                                <i class="fas fa-phone"></i>
                                <p>0478 25 22 14</p>
                            </div>
                            <div class="mail">
                                <i class="fas fa-envelope"></i>
                                <p>marie_creations@gmail.com</p>
                            </div>
                            <div class="adress">
                                <i class="fas fa-home"></i>
                                <p>Rue de la croix, 5 <br> 5000 Namur</p>
                            </div>
                        </div>
                        {{ form_end(contactForm) }}
                    </div>
                </div>
                <div class="map">
                    <img src="{{ asset('img/contact/map.jpg') }}" alt="">
                </div>
            </div>
        </div>
    </main>
{% endblock %}