{% extends 'base.html.twig' %}

{% block title %}{{parent() }} - connexion {% endblock %}

{% block body %}
    <main class="login">
        <div class="bg-img">
            <img src="{{ asset('img/login/login.jpg') }}" alt="">
        </div>
        <div class="form-login">
            <h1>Rebonjour !</h1>
            <h2>Veuillez entrer vos identifiants</h2>
            <form action="">
                <input type="text" id="nom" name="nom" placeholder="Votre nom" required>
                <input type="text" id="prenom" name="prenom" placeholder="Votre prénom" required>
                <input type="email" id="email" name="email" placeholder="Votre email" required>
                <input type="password" id="password" name="password" placeholder="Votre mot de passe" required>
                <p><a class="btn-section" href="">Mot de passe oublié ?</a></p>
                <input class="submit" type="submit" value="Se connecter">
                <div>
                    <p>Vous n'avez pas encore de compte ?</p>
                    <p class="text-center"><a class="btn-section" href="{{ path('app_register') }}">S'inscrire</a></p>
                </div>
            </form>

        </div>
    </main>
{% endblock %}

